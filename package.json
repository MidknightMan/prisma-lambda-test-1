{
  "name": "node-ts-prisma-server-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "ts-node": "ts-node",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "local-cloud": "NODE_ENV=production nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "docker-build": "docker build -f docker/k8s/Dockerfile .",
    "docker-up": "docker-compose -f src/db/postgres/postgres.yml up -d",
    "docker-down": "docker-compose -f src/db/postgres/postgres.yml down",
    "init-db": "npx prisma migrate dev --name init --schema src/db/prisma/schema.prisma",
    "create-db": "npm run docker-up && npm run init-db",
    "setup-local": "npm run create-db && npm run seed-db",
    "reset-db": "npx prisma migrate reset --force --schema src/db/prisma/schema.prisma",
    "destroy": "npm run reset-db && npm run docker-down && docker volume rm postgres_postgres",
    "seed-db": "npx prisma db seed",
    "test": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "prisma": {
    "seed": "ts-node src/db/prisma/seed.ts"
  },
  "devDependencies": {
    "@types/amqplib": "^0.8.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.3",
    "@types/node": "^15.0.1",
    "@types/uuid": "^8.3.0",
    "jest": "^27.4.4",
    "nodemon": "^2.0.7",
    "prisma": "~3.6.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.1",
    "ts-node": "^9.1.1",
    "typegraphql-prisma": "^0.18.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@prisma/client": "~3.6.0",
    "@types/graphql-fields": "^1.3.4",
    "amqplib": "^0.8.0",
    "apollo-server": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.14.1",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.1",
    "type-graphql": "^1.1.1",
    "uuid": "^8.3.2"
  }
}
